{
  "name": "api-nest-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "api-nest"
  ],
  "projectType": "application",
  "targets": {
    "api-e2e": {
      "executor": "nx:noop",
      "dependsOn": [
        "api-e2e-nest",
        "api-e2e-dotnet"
      ]
    },
    "api-e2e-nest": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{e2eProjectRoot}"
      ],
      "options": {
        "jestConfig": "apps/api-nest-e2e/jest.config.api-nest.ts",
        "ci": true
      }
    },
    "api-e2e-dotnet": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{e2eProjectRoot}"
      ],
      "options": {
        "jestConfig": "apps/api-nest-e2e/jest.config.api-dotnet.ts",
        "ci": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/api-nest-e2e/**/*.{js,ts}"
        ]
      }
    }
  }
}